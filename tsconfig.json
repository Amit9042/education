{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./projects",
        "paths": {
            "@sharedModule/*": ["edusense-users/src/app/shared-module/*"],
            "utility-lib": ["dist/utility-lib"],
            "utility-lib/*": ["dist/utility-lib/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "skipLibCheck": false,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
